{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "linux-make-debug",
      "displayName": "Linux (Make, Debug)",
      "description": "Debug build using Unix Makefiles",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-make-release",
      "displayName": "Linux (Make, Release)",
      "description": "Release build using Unix Makefiles",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "linux-make-debug"
    },
    {
      "name": "release",
      "configurePreset": "linux-make-release"
    }
  ]
}
